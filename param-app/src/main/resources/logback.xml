<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<statusListener class="ch.qos.logback.core.status.NopStatusListener" />
	
	<!-- Log onto console only, with default format -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<!-- Log onto console only, with default format -->
	<appender name="STDOUT_QUERY" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%msg%n</pattern>
		</encoder>
	</appender>

	<!-- Log loaded config file at spring startup-->
<!-- 	<logger name="org.springframework.boot.context.config.ConfigFileApplicationListener" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="STDOUT" />
	</logger>
 -->
	<!-- Default INFO enabled logs for application -->
	<logger name="fr.uem.efluid" additivity="false">
		<level value="INFO" />
		<appender-ref ref="STDOUT" />
	</logger>

<!-- 
	<logger name="fr.uem.efluid.model.repositories.impls" additivity="false"> 
		<level value="DEBUG" /> 
		<appender-ref ref="STDOUT" /> 
	</logger>

	<logger name="fr.uem.efluid.services.PrepareIndexService" additivity="false"> 
		<level value="DEBUG" /> 
		<appender-ref ref="STDOUT" /> 
	</logger>
 -->
 
	<!-- Explicit logger for Extractor queries. Log it here into current console on custom format -->
 	<logger name="extractor.queries" additivity="false">
		<level value="INFO" />
		<appender-ref ref="STDOUT_QUERY" />
	</logger>
	
	<!-- Explicit logger for Identifier queries. Log it here into current console on custom format -->
 	<logger name="identifier.queries" additivity="false">
		<level value="INFO" />
		<appender-ref ref="STDOUT_QUERY" />
	</logger>
	
 
	<!-- Default level for every logged resources -->
	<root level="WARN">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>